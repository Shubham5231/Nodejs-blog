<div class="author">
  <h1 class="author_heading">Hi, I am Shubham.</h1>
  <p class="author_body">Web Developer</p>
</div>

<img
  src="/images/hero-image.webp"
  alt="person looking out throgh window"
  class="hero_img"
  width="981"
  height="528"
/>
<section class="articles">
  <h2 class="articles_heading">Latest Posts</h2>
  <ul class="articles-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="articles-list_date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>

  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
